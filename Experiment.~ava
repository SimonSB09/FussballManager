import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.stage.Stage;
import javafx.scene.control.*;
import javafx.scene.input.KeyCombination;
import javafx.event.Event;

/**
 *
 * Beschreibung
 *
 * @version 1.0 vom 13.10.2025
 * @author 
 */

public class Experiment extends Application {
  // start attributes
  private Menu menu1 = new Menu();
    private Menu menu1_File = new Menu("File");
      private Menu menu1_File_New = new Menu("New");
        private MenuItem menu1_File_New_Java = new MenuItem("Java");
        private MenuItem menu1_File_New_XML = new MenuItem("XML");
      private MenuItem menu1_File_Load = new MenuItem("Load");
      private MenuItem menu1_File_Save = new MenuItem("Save");
    private Menu menu1_Edit = new Menu("Edit");
      private MenuItem menu1_Edit_Copy = new MenuItem("Copy");
      private MenuItem menu1_Edit_Paste = new MenuItem("Paste");
      private SeparatorMenuItem menu1_Separator1 = new SeparatorMenuItem();
      private MenuItem menu1_Edit_Delete = new MenuItem("Delete");
  // end attributes
  
  public void start(Stage primaryStage) { 
    Pane root = new Pane();
    Scene scene = new Scene(root, 284, 262);
    // start components
    
    menu1.getItems().add(menu1_File);
    menu1_File.getItems().add(menu1_File_New);
    menu1_File_New.getItems().add(menu1_File_New_Java);
    menu1_File_New.getItems().add(menu1_File_New_XML);
    menu1_File.getItems().add(menu1_File_Load);
    menu1_File.getItems().add(menu1_File_Save);
    menu1_File_Save.setAccelerator(KeyCombination.keyCombination("Ctrl+Shift+S"));
    menu1.getItems().add(menu1_Edit);
    menu1_Edit.getItems().add(menu1_Edit_Copy);
    menu1_Edit_Copy.setAccelerator(KeyCombination.keyCombination("Ctrl+C"));
    menu1_Edit.getItems().add(menu1_Edit_Paste);
    menu1_Edit_Paste.setAccelerator(KeyCombination.keyCombination("Ctrl+V"));
    menu1_Edit.getItems().add(menu1_Separator1);
    menu1_Edit.getItems().add(menu1_Edit_Delete);
    menu1_File_New_Java.setOnAction(
      (event) -> {menu1_File_New_Java_Action(event);} 
    );
    menu1_File_New_XML.setOnAction(
      (event) -> {menu1_File_New_XML_Action(event);} 
    );
    menu1_File_Load.setOnAction(
      (event) -> {menu1_File_Load_Action(event);} 
    );
    menu1_File_Save.setOnAction(
      (event) -> {menu1_File_Save_Action(event);} 
    );
    menu1_Edit_Copy.setOnAction(
      (event) -> {menu1_Edit_Copy_Action(event);} 
    );
    menu1_Edit_Paste.setOnAction(
      (event) -> {menu1_Edit_Paste_Action(event);} 
    );
    menu1_Edit_Delete.setOnAction(
      (event) -> {menu1_Edit_Delete_Action(event);} 
    );
    // end components
    
    primaryStage.setOnCloseRequest(e -> System.exit(0));
    primaryStage.setTitle("Experiment");
    primaryStage.setScene(scene);
    primaryStage.show();
  } // end of public Experiment
  
  // start methods
  
  public static void main(String[] args) {
    launch(args);
  } // end of main
  

  public void menu1_File_New_Java_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_File_New_Java_Action

  public void menu1_File_New_XML_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_File_New_XML_Action

  public void menu1_File_Load_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_File_Load_Action

  public void menu1_File_Save_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_File_Save_Action

  public void menu1_Edit_Copy_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_Edit_Copy_Action

  public void menu1_Edit_Paste_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_Edit_Paste_Action

  public void menu1_Edit_Delete_Action(Event evt) {
    // TODO add your code here

  } // end of menu1_Edit_Delete_Action
  // end methods
} // end of class Experiment
